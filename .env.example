# Infrastructure Configuration
# Copy to .env and customize as needed

# LLM Backend Configuration
# Options: "stub" (test), "ollama" (local), "groq" (API)
LLM_BACKEND=ollama
OLLAMA_MODEL=phi
OLLAMA_BASE_URL=http://localhost:11434

# Speech-to-Text (STT) Configuration
# Options: "stub" (test), "whisper" (local)
STT_ENABLED=true
STT_BACKEND=whisper
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Text-to-Speech (TTS) Configuration
# Options: "stub" (test), "coqui" (local), "elevenlabs" (API)
TTS_ENABLED=true
TTS_BACKEND=coqui
COQUI_MODEL=tts_models/en/ljspeech/glow-tts
COQUI_DEVICE=cpu

# Long-Term Memory (LTM) Configuration
# Options: "stub" (test), "qdrant" (vector DB)
LTM_BACKEND=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Optional: Groq API Key (for LLM_BACKEND=groq)
# GROQ_API_KEY=

# Optional: ElevenLabs API Key (for TTS_BACKEND=elevenlabs)
# ELEVENLABS_API_KEY=
